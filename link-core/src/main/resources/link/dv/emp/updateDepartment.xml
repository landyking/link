<?xml version="1.0" encoding="UTF-8"?>
<directive xmlns="http://www.github.com/landyking/link"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.github.com/landyking/link http://www.github.com/landyking/link/link-1.0.xsd">
    <description>更新部门</description>
    <input>
        <param name="departmentNo" desc="部门编号"/>
        <param name="departmentName" desc="部门名称"/>
        <param name="employeeGender" desc="雇员性别"/>
    </input>
    <execution>
        <dbUpdate id="default" dataSource="emp">
            <!--<field column="dept_name" from="departmentName"/>-->
            <field column="dept_name">
                <subSql>
                    select count(0) from employees where gender=:employeeGender
                </subSql>
            </field>
            <table>departments</table>
            <!--<where>
                <![CDATA[
                1=2
            <#param attr="departmentName"> and dept_no=:departmentNo <#val attr="departmentNo"></#val></#param>
]]>
            </where>-->
            <where>
                dept_no=:departmentNo
            </where>
        </dbUpdate>
    </execution>
    <output>
    </output>
    <dependencys></dependencys>
</directive>