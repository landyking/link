<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <import resource="classpath:/link/linkJdbc.xml"/>
    <import resource="classpath:/link/linkParamProcessor.xml"/>
    <import resource="classpath:/link/linkExecution.xml"/>
    <import resource="classpath:/link/linkExecutionEnding.xml"/>
    <import resource="classpath:/link/linkResultRender.xml"/>
    <bean id="directiveManager" class="com.github.landyking.link.DirectiveManager">
        <property name="exec" ref="directiveExec"/>
    </bean>
    <bean id="localDictManager" class="com.github.landyking.link.LocalDictManager"/>
    <bean id="directiveExec" class="com.github.landyking.link.DirectiveExec"/>
    <bean id="dataSourceManager" class="com.github.landyking.link.DataSourceManager"/>
    <bean id="cacheManager" class="org.springframework.cache.guava.GuavaCacheManager">
        <property name="cacheSpecification" value="maximumSize=1000,expireAfterWrite=60s"/>
    </bean>
</beans>