<?xml version="1.0" encoding="UTF-8"?>
<directive xmlns="http://www.github.com/landyking/link"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.github.com/landyking/link http://www.github.com/landyking/link/link-1.0.xsd">
    <description>自定义sql</description>
    <input>
        <param name="queryNo"/>
        <param name="deptNo"/>
        <param name="deptName"/>
    </input>
    <execution>
        <dbQuery id="queryPage" dataSource="dataSource" pagination="true" limitDefaultSize="11">
            select dept_no from departments
        </dbQuery>
        <dbQuery id="queryOne" dataSource="dataSource" pagination="false">
            select dept_no from departments where dept_no = :queryNo
        </dbQuery>
        <dbExecute id="insertOne" dataSource="dataSource">
            insert into departments (dept_no,dept_name) values (:deptNo,:deptName)
        </dbExecute>
        <dbExecute id="deleteOne" dataSource="dataSource">
            delete departments where dept_no = :deptNo
        </dbExecute>
    </execution>
    <executionEnding/>
    <output>
        <map name="root">
            <param name="success" from="true"/>
        </map>
    </output>
    <resultRender/>
    <dependencys></dependencys>
</directive>