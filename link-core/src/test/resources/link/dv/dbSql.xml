<?xml version="1.0" encoding="UTF-8"?>
<directive xmlns="http://www.github.com/landyking/link"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.github.com/landyking/link http://www.github.com/landyking/link/link-1.0.xsd">
    <description><![CDATA[师曾发生]]></description>
    <input>
        <param name="name" desc="姓名" notEmpty="false"/>
        <param name="addressId" desc="地址id"/>
        <param name="22" desc="" notEmpty="true" default="" fixed="">
            <processors>
                <custom className="hello.world.CClass">
                    <prop name="name">刘</prop>
                    <prop name="age">12</prop>
                </custom>
            </processors>
        </param>
    </input>
    <execution>
        <custom  className="com.huiyunit.Test">
            <prop name="first">world</prop>
            <prop name="first2">hello</prop>
        </custom>
        <dbDelete  dataSource="default">
            <table>
                t_test
            </table>
            <where>
                hello = :test and address in (:lala)
            </where>
        </dbDelete>
        <dbInsert dataSource="default">
            <field ignoreNull="false" column="hello" default="2"/>
            <field ignoreNull="false" from="aaa" column="bbb"/>
            <field ignoreNull="false" column="bbb">
                <subSql>select * from</subSql>
            </field>
            <table>t_student</table>
        </dbInsert>
        <dbDelete dataSource="default">
            <table>22</table>
            <where>333</where>
        </dbDelete>
        <dbSql dataSource="default" pagination="true" limitDefaultSize="15">
            <![CDATA[
            delete from t_hello where name like '%test%'
            ]]>
        </dbSql>
        <dbQuery dataSource="default" pagination="true">
            <field column="name" tableAlias="address" columnAlias="address_name"/>
            <field column="name" tableAlias="road" columnAlias="road_name"/>
            <from>
                <base alias="address" table="t_address" prefix="hyuser"/>
                <join type="left" alias="road" table="t_road">
                    <on>address.road_id=road.id</on>
                </join>
            </from>
            <where>address.id = :addressId</where>
            <!--<groupBy>111</groupBy>-->
            <!--<having></having>-->
            <order>address.create_time desc</order>
        </dbQuery>
        <dbUpdate dataSource="hello">
            <field ignoreNull="false" column="user_name"/>
            <table>t_update</table>
            <where>
                1=1
            </where>
        </dbUpdate>
    </execution>
    <output>
        <param name="1" from=""/>
        <param name="count" from="num" desc="总数量"/>
    </output>
    <dependencys></dependencys>
</directive>